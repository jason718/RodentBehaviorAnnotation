train_net: "c3d_ucf101_finetuning_train.prototxt"
# test_net: "we don't use testing on the fly"
test_iter: 100
test_interval: 0
base_lr: 0.00001
momentum: 0.9
weight_decay: 0.0005
lr_policy: "step"
gamma: 0.1
stepsize: 1000
# Display every 200 iterations
display: 20
# The maximum number of iterations
max_iter: 2500
# snapshot intermediate results
snapshot: 2500
snapshot_prefix: "c3d_mouse"
solver_mode: GPU
